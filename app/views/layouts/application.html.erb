<!DOCTYPE html>
<html>
<head>
  <title>Eventsapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to("Events App",{:controller => 'events',:action => 'index'},:class => "navbar-brand") %>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li ><%= link_to("Home",{:controller => 'events',:action => 'index'}) %></li>
            <% if logged_in %>
            	<li><%= link_to("Logout",{:controller => 'access',:action => 'logout'}) %></li>
            <% else %>
	            <li><%= link_to("Register",{:controller => 'access',:action => 'register'}) %></li>
				<li><%= link_to("Login",{:controller => 'access',:action => 'login'}) %></li>
          	<% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
<div class="container">
  <% if flash[:notice] %>
    <div class="flash-notice">
      <p><%= flash[:notice] %></p>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="flash-alert">
      <p><%= flash[:alert] %></p>  
    </div>
  <% end %>
	<%= yield %>
</div>
<footer>
	
</footer>
</body>
</html>
